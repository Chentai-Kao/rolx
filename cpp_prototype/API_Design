//undirected egonet
class TUNEgonet : public TUNGraph{
constructor:

TUNEgoNet(PUNGraph &Graph, int &NId);

private attribute:
TInt CtrNId;
TInt WthnEdges, ArndEdges;

public member methods:
int GetCtrNId()
int GetWthnEdges()
int GetArndEdges()
}

//directed egonet
class TNEgonet : public TNGraph {

constructor:
TNEgonet(PNGraph &Graph, int CtrNId);

private attribute:
TInt CtrNId;
TInt WthnEdges, InEdges, OutEdges;

public member methods:
int GetCtrNId()
int GetWthnEdges()
int GetInEdges()
int GetOutEdges()
}